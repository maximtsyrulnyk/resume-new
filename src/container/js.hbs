{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <main>
        <section>
            {{> title data='JS' big=true}}

            <hr>
            <h1>{{name}}</h1>
            <hr>
            <br>
            <p><mark>{{name}}</mark></p>
            <p><mark>{{description}}</mark></p>
            <h2>History</h2>
            {{#with history}}
            <p>Year: {{year}}</p>
            <p>Founder: {{founder}}</p>
            {{/with}}
            {{!--
            {{#each types}}
            {{this}}<p><mark>Types: {{types}}</mark></p>
            {{/each}}
            {{#each syntax}}
            <p><mark>Syntax: {{syntax}}</mark></p>
            {{/each}}
            --}}
            <h2>Data types</h2>
            {{#each types}}
            <ul>
                <li>{{this}}</li>
            </ul>
            {{/each}}
            <h2>Variables</h2>
            {{#each variables}}
            <ul>
                <li> {{this}}</li>
            </ul>
            {{/each}}
            <h2>Functions</h2>
            {{#each functions}}<ul>
                <li> {{this}}</li>
            </ul>
            {{/each}}
            <h2>Conditionals</h2>
            {{#each conditionals}}<ul>
                <li>
                    {{this}} </li>
            </ul> {{/each}}
            <h2>Loops</h2>
            {{#each loops}}<ul>
                <li> {{this}}</li>
            </ul>{{/each}}
            <h2>Classes</h2>
            {{#each classes}}<ul>
                <li> {{this}}</li>
            </ul>{{/each}}


            {{#each features}}
            <ul>
                <li>{{this}}</li>
            </ul>
            {{/each}}
            <h2>Libraries</h2>
            {{#each libraries}}
            <ul>
                <li>{{this}}</li>
            </ul>
            {{/each}}
            <h2>Tools</h2>
            {{#each tools}}<ul>
                <li>{{this}}</li>
            </ul> {{/each}}
            <h2>Community</h2>
            {{#each community}}
            <ul>
                <li>{{name}} (type: {{type}})</li>
            </ul>
            {{/each}}
            {{#each name}} <ul>
                <li>{{this}}</li>
            </ul>{{/each}}
            <p><mark>Type: {{type}}</mark></p>


        </section>
    </main>

</div>

