                    </div>
                </div>
            </div>
            <br>

            <div class="card p-2 my-2">
                {{#with contacts}}
                <h3>{{title}}</h3>
                <div class="row">
                    {{#each contactData}}
                    <div class="card col-4">
                        <div class="card-body">
                            <p class="text-muted">{{title}}</p>
                            <p>{{value}}</p>
                            {{#with button}}
                            <a class="btn {{#if isPrimary}}btn-primary{{/if}} {{#if isSecondary}}btn-outline-secondary{{/if}} {{#if isDanger}}btn-outline-danger {{/if}}"
                                href="{{link}}">{{text}}</a>
                            {{/with}}
                        </div>
                    </div>
                    {{/each}}
                </div>
                {{/with}}
            </div>
