                        </div>
                        {{/each}}


                    </div>

                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        {{#with recipients}}
                        <h3>{{title}}</h3>
                        <div class="row">
                            {{#each users}}
                            <div class="card col-4">
                                <div class="card-body">
                                    <h6>{{name}}</h6>
                                    <p>{{phone}}</p>
                                    {{#with button}}
                                    <a class="btn btn-primary" href="{{link}}">{{text}}</a>
                                    {{/with}}
                                </div>
                            </div>

